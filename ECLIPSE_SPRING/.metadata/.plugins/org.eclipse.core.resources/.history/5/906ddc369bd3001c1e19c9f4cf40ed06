package it.uniroma3.catering.controller;

import java.util.List;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;

import it.uniroma3.catering.model.Buffet;
import it.uniroma3.catering.service.BuffetService;
import it.uniroma3.catering.validator.BuffetValidator;

@Controller
public class BuffetController {
	
	@Autowired
	private BuffetService buffetService;
	
	@Autowired
	private BuffetValidator buffetValidator;
	
	/*
	 * convenzione: get per le operazioni di lettura, post per gli aggiornamenti
	 * il path è associato alle classi del dominio
	*/
	
	@PostMapping("/buffet")
	public String newBuffet(@Valid @ModelAttribute("buffet") Buffet buffet, Model model,
			BindingResult bindingResult) {
		// Creo una entità Buffet dai dati di input della stringa HTTP
		/* 
		 * Se non ci sono errori inserisce la ricorrenza di buffet 
		 * tramite la save del service 
		 * */
		
		if (!bindingResult.hasErrors()) {
			
			this.buffetService.save(buffet);
			model.addAttribute("buffet", this.buffetService.findById(buffet.getId()));
			
			// Ogni metodo ritorna la stringa col nome della vista successiva
			
			return "buffet.html"; // se non ci sono errori si va alla form di visualizzazione dati inseriti
		}
		else
			return "buffetForm.html"; // se ci sono errori si rimanda alla form di inserimento
	}

	@GetMapping("/buffet/{id}")
	public String getBuffet(@PathVariable("id")Long id, Model model) { // variabile associata al path
		Buffet buffet = buffetService.findById(id);
		model.addAttribute("buffet", buffet);
		return "buffet.html";
	}
	
	// richiede tutte le persone, non c'è id
	@GetMapping("/buffet")
	public String getBuffets(Model model) {
		List<Buffet> buffets = buffetService.findAll();
		model.addAttribute("buffets", buffets);
		return "buffet.html";
	}
	
	@GetMapping("/buffetForm/{id}")
	public String getPersona(Model model) {
		model.addAttribute("buffet", new Buffet());
		return "buffetForm.html";
	}
}
